{
	"schemaVersion": 1,
	"id": "contex",
	"version": "${version}",
	"name": "ConTex",
	"description": "A Fabric library mod for (de)serializing custom text contents",
	"authors": [
		"eggohito"
	],
	"contact": {
		"sources": "https://github.com/eggohito/ConTex"
	},
	"license": "CC0-1.0",
	"icon": "assets/contex/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"io.github.eggohito.contex.Contex"
		],
		"preLaunch": [
			"io.github.eggohito.contex.integration.ContexIntegration::registerVanilla"
		]
	},
	"mixins": [
      "contex.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.14.21",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*"
	}
}